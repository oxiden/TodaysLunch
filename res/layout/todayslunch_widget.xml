<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:layout_margin="0dp"
    android:background="@layout/widget_outline"
    android:orientation="horizontal"
    android:padding="0dp"
    android:scrollbarAlwaysDrawVerticalTrack="true" >

    <LinearLayout
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="0dp"
        android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/web"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:background="@layout/image_outline"
            android:contentDescription="@string/web_description"
            android:scaleType="fitXY"
            android:src="@drawable/ic_web" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="198dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="0dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/titlebar_outline"
            android:paddingLeft="2dp"
            android:paddingRight="0dp"
            android:text="@string/title_default"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/text_tapme"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>